extends layout 

block content 
  h1 Author: #{author.name}
  if !author.date_of_birth && !author.date_of_death
    |  No lifespan info
  else if !author.date_of_death
    |  #{author.date_of_birth_formatted} - present
  else
    |  #{author.date_of_birth_formatted} - #{author.date_of_death_formatted}

  div(style="margin-left:20px; margin-top:20px;")

    h2 Books

    div
      dl
        each book in author_books 
          dt(style="margin-top:20px;") 
            a(href=book.url) #{book.title}
          dd #{book.summary}

        else
          p This author has no books
  
  hr
  p 
    a(href=author.url+'/delete') Delete author
  p 
    a(href=author.url+'/update') Update author